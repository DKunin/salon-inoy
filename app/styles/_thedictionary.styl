.dictionary
  font-family: 'PTSans'
  .answers
    standartdialog()
    min-height: 80px
  .phoneimage-holder
    img
      max-height: 100%
      transition: opacity .2s linear
    max-height: 80px
    display: block
    text-align: center
    background-color: clouds
    position: relative
    i
      text-align: center
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      vertical-align: middle
      opacity: 0
      transition: opacity .2s linear
      color: peter_river
      font-size: 4em
      line-height: 80px
    &:hover
      img
        opacity: 0
      i
        transition: all .2s linear
        opacity: 1
        cursor: pointer
.dictionary-holder
  max-height: 100%
  overflow-y: auto


.dictionary-edit
  .techForm
    list-style: none
    padding: 0
    font-size: 1.2em
    padding-right: 20px
    .range-slider
      width: 50%
    li
      margin: 20px auto
      label
        margin-bottom: -17px
        display: block
  .phone-image
    height: 60%
    float: left
    img
      max-height: 300px
      margin-right: 20px
  .total-list-info
    color: asbestos
    font-size: .8em
  .filter-products
    outline: none
    display: inline-block
    background-color: clouds
    width: 80%
  .tech-data-list
    padding: 0
    list-style: none
    font-size: 1.3em
    .fa
      margin-right: 10px
  h5
    font-size: .9em
    margin: 10px auto
  .dict-list, .additional-list, h4, h2
    font-weight: normal
    overflow-x: visible
  .dict-list, .additional-list
    margin: 0
    standartdialog()
    li
      width: 80%
      margin-left: 0
  .currentTab
    position: relative
    &:hover
      &:after
        border-left-color: peter_river
      
    &:after
      position: absolute
      right: -35px
      top: 0
      z-index: 10
      content: ""
      border: 23px solid lighten(peter_river,20) 
      display: block
      border-right-color: transparent
      border-bottom-color: transparent
      border-top-color: transparent
  .tech
    max-height: 100%
    overflow-y: auto
    form
      label.wrong
        color: red